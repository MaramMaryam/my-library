@model IEnumerable<DataLayer.Page>
@{
    ViewBag.Title = "ArchiveBooks";
}

<section class="mb-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap p-3 bg-white my-4 rounded">
                    <nav>
                        <ol class="d-flex">
                            <li><a href="/">خانه</a></li>
                            <li> "@Model.Count()" با عبارت تعداد "@ViewBag.Name" یافت شد </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @*<div class="col-12">
