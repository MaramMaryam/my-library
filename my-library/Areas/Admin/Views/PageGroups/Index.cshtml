@model IEnumerable<DataLayer.PageGroup>

@{
    ViewBag.Title = "Index";
}

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="#" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#myModal" onclick='CreateGroup()'>
        افزودن
        <i class="fas fa-plus"></i>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupTitle)
        </th>
        <th> @Html.DisplayNameFor(model => model.GroupImgName)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupImgName)
            </td>
            <td>
                <a href="#" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#myModal" onclick='DetailGroup(@item.GroupID)'>
                    @*جزئیات*@
                    <i class="fas fa-info-circle text-white"></i>

                </a>
                <a href="#" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#myModal" onclick='EditGroup(@item.GroupID)'>
                    @*ویرایش*@
                    <i class="fas fa-edit text-white"></i>
                </a>
                <a href="#" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#myModal" onclick='DeleteGroup(@item.GroupID)'>
                    <i class="fas fa-remove"></i>
                    @*حذف*@
                </a>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.GroupID }) |
            @Html.ActionLink("Details", "Details", new { id = item.GroupID }) |*@
                @*@Html.ActionLink("Delete", "Delete", new { id = item.GroupID })*@
            </td>
        </tr>
    }
</table>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel"></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="bodyModal">

            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>*@
        </div>
    </div>
</div>

@section scripts
    {
    <script>
        function CreateGroup() {
            $.ajax({
                url: "Create/",
                type: "Get",
                data: {}
            }).done(function (result) {
                $('myModal').modal('show');
                $('#exampleModalLabel').html('افزودن گروه جدید');
                $('#bodyModal').html(result)
            })
        }
    </script>

    <script>
        function DetailGroup(id) {
            $.ajax({
                url: "Details/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('myModal').modal('show');
                $('#exampleModalLabel').html('جزئیات');
                $('#bodyModal').html(result)
            })
        }
    </script>

    <script>
        function EditGroup(id) {
            $.ajax({
                url: "Edit/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('myModal').modal('show');
                $('#exampleModalLabel').html('ویرایش');
                $('#bodyModal').html(result)
            })
        }
    </script>

    <script>
        function DeleteGroup(id) {
            $.ajax({
                url: "Delete/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('myModal').modal('show');
                $('#exampleModalLabel').html('حذف');
                $('#bodyModal').html(result)
            })
        }
    </script>
}