<script>
    function addComment() {
        $.ajax({
            url: "/Books/AddComment/" + @Model.PageID,
            type: "Get",
            data: { name: $("#txtName").val(),name: $("#txtName").val(), email: $("#txtEmail").val(), comment: $("#txtComment").val() }
        }).done(function(result) {

            $("#commentList").html(result);
            $("#txtName").val("");
            $("#txtEmail").val("");
            $("#txtComment").val("");

        });
    }
</script>

